<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="12dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/list_group_design"
xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/"
    android:elevation="2dp">

<ImageView
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:id="@+id/imageSearchResult"
    android:src="@drawable/facebook"
    android:layout_marginTop="4dp"
    android:adjustViewBounds="false"
    android:paddingLeft="6dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="add"
        android:id="@+id/buttonADD"
        android:background="@drawable/button_design_green"
        android:textColor="@color/text_button_color"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_alignEnd="@+id/linearLayout3"
        android:visibility="invisible" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox1"
        android:checked="false"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/buttonADD"
        android:layout_alignEnd="@+id/buttonADD" />

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/imageSearchResult"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="6dp"
        android:id="@+id/linearLayout3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Professor Konechno Lopuh"
        android:id="@+id/nameSearchResult"
        android:textIsSelectable="false"
        android:paddingLeft="4dp"
        android:paddingBottom="4dp" />
</LinearLayout>

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/imageSearchResult"
    android:layout_toLeftOf="@+id/checkBox1"
    android:layout_toRightOf="@+id/imageSearchResult"
    android:layout_toEndOf="@+id/imageSearchResult"
    android:layout_marginLeft="10dp"
        android:id="@+id/linearLayout2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Multiplication"
        android:id="@+id/descrSearchResult" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fall 2013"
        android:id="@+id/textView3"
        android:layout_marginTop="6dp" />
</LinearLayout>

</RelativeLayout>