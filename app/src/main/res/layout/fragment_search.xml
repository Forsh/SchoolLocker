<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zfakgroup.israel.schoollocker.BlankFragment"
    android:orientation="vertical"
    android:baselineAligned="false">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/search_input">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp">


                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_view_university"
                    android:id="@+id/textView2_University"

                    android:textColor="@color/text_color"
                    android:textSize="20sp"
                    android:layout_marginTop="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/text_color"
                        android:textSize="20sp"
                        android:text="@string/date_begin"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_marginTop="18dp"
                        android:id="@+id/textViewDateBegin" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp">


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:id="@+id/UniversityPicker"
                        android:background="@drawable/edit_text_design"
                        android:layout_marginTop="10dp"
                        android:text="@string/edit_text_university"
                        android:inputType="text"
                        android:gravity="center_horizontal" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:id="@+id/DateBeginPicker"
                        android:background="@drawable/edit_text_design"
                        android:layout_marginTop="10dp"
                        android:text="@string/edit_text_date_begin"
                        android:hint="@string/edit_date_hint"
                        android:gravity="center_horizontal" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:textColor="@color/text_button_color"
        android:textSize="20sp"
        android:id="@+id/btnSearch"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_design_blue"
        android:layout_gravity="center_horizontal" />

    <ScrollView
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:id="@+id/scrollView3"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewSearchResult"
            android:choiceMode="multipleChoice"
            android:layout_marginTop="2dp" />

    </LinearLayout>
</ScrollView>

</LinearLayout>
