<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/FragmentCourse"
    android:paddingTop="4dp"
    android:elevation="2dp">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_group_design"
        android:baselineAligned="false"
        android:elevation="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout"
            android:layout_toLeftOf="@+id/linearLayout3"
            android:layout_toStartOf="@+id/linearLayout3">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageSearchResult"
                android:src="@drawable/group"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="false" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageSearchResult"
                android:layout_toRightOf="@+id/imageSearchResult"
                android:layout_toEndOf="@+id/imageSearchResult"
                android:layout_marginLeft="10dp"
                android:id="@+id/linearLayout2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Multiplication"
                    android:id="@+id/nameSearchResult"
                    android:textSize="16sp"
                    android:textIsSelectable="false" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fall 2015"
                android:id="@+id/textView3"
                android:textSize="15sp"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignLeft="@+id/linearLayout2"
                android:layout_alignStart="@+id/linearLayout2"
                android:layout_marginTop="4dp" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"

            android:layout_above="@+id/descrSearchResult"
            android:layout_alignRight="@+id/descrSearchResult"
            android:layout_alignEnd="@+id/descrSearchResult">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="add"
                android:id="@+id/buttonADD"
                android:background="@drawable/button_design_add"
                android:textColor="@color/text_button_color"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:paddingBottom="2dp"
                android:visibility="gone"
                android:paddingTop="2dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxSearchItem"
                android:checked="false"
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Professor Konechno Lopuh"
            android:id="@+id/descrSearchResult"
            android:textIsSelectable="false"
            android:textColor="#ff000000"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:layout_marginTop="4dp" />
    </RelativeLayout>
</LinearLayout>