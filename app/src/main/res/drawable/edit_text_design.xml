<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#66BB6A"
                android:centerColor="#66BB6A" android:endColor="#66BB6A"
                android:angle="270" android:centerX="0.5" android:centerY="0.5" />
            <stroke android:width="5dp" android:color="#66BB6A" />
            <corners android:radius="2dp" />
            <padding android:left="10dp" android:top="6dp" android:right="10dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>

            <stroke android:width="4dp" android:color="#7e00b8ae" />
            <corners android:radius="2dp" />
            <padding android:left="10dp" android:top="6dp" android:right="10dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item>
        <shape>

            <stroke android:width="3dp" android:color="#66BB6A" />
            <corners android:radius="2dp" />
            <padding android:left="10dp" android:top="6dp" android:right="10dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>