<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#2bff9800"
                android:centerColor="#15ff9800" android:endColor="#3dff9800"
                android:angle="270" android:centerX="0.5" android:centerY="0.5" />
            <stroke android:width="5dp" android:color="#FF9800" />
            <corners android:radius="2dp" />
            <padding android:left="10dp" android:top="6dp" android:right="10dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#76e1fff5"
                android:centerColor="#ffffffff" android:endColor="#ffffffff"
                android:angle="270" android:centerX="0.5" android:centerY="0.5" />
            <stroke android:width="4dp" android:color="#006064" />
            <corners android:radius="2dp" />
            <padding android:left="10dp" android:top="6dp" android:right="10dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#ffffffff"
                android:centerColor="#ffffffff" android:endColor="#87e1fff5"
                android:angle="270" android:centerX="0.5" android:centerY="0.5" />
            <stroke android:width="2dp" android:color="#00BFA5" />
            <corners android:radius="2dp" />
            <padding android:left="10dp" android:top="6dp" android:right="10dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>